{% extends 'dashboard.html.twig' %}

{% block body %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Anúncios
            <small>lista de todas as anúncios cadastradas</small>
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="col-md-8">
            <!-- Default box -->
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title"> </h3>

                    <div class="pull-right">
                        <a href="{{ path('advertisement_new') }}">
                            <button type="button"
                                    class="btn btn-block btn-primary">
                                Adicionar
                            </button>
                        </a>
                    </div>
                </div>
                <div class="box-body">
                    <div id="wrapper">
                        <div id="container">

                            <table class="table table-bordered">
                                <thead>
                                <tr>
                                    <th style="width: 10px">Id</th>
                                    <th>Título</th>
                                    <th>Empresa</th>
                                    <th style="width: 140px">Opções</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for advertisement in advertisements %}
                                    <tr>
                                        <td style="vertical-align: middle">
                                            <a href="{{ path('advertisement_show',
                                            { 'id': advertisement.id }) }}">
                                                {{ advertisement.id }}
                                            </a>
                                        </td>
                                        <td style="vertical-align: middle">{{ advertisement.title }}</td>
                                        <td style="vertical-align: middle">{{ advertisement.company }}</td>
                                        <td style="vertical-align: middle">
                                            <ul class="list-inline pull-right">
                                                <li>
                                                    <a href="{{
                                                    path('advertisement_edit',
                                                    { 'id': advertisement.id }) }}">
                                                        <button type="button"
                                                                class="btn btn-block btn-primary btn-sm">
                                                            Editar
                                                        </button>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="{{
                                                    path('advertisement_show',
                                                    { 'id': advertisement.id })
                                                    }}">
                                                        <button type="button"
                                                                class="btn btn-block btn-info btn-sm">
                                                            Ver
                                                        </button>
                                                    </a>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <ul class="pagination pagination-sm no-margin">
                        <li><a href="#">&laquo;</a></li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">&raquo;</a></li>
                    </ul>
                </div>
                <!-- /.box-footer-->
            </div>
        </div>
        <!-- /.box -->

    </section>
    <!-- /.content -->
{% endblock %}

{% block stylesheets %}
    <style>

    </style>
{% endblock %}
