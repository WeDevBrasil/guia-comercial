{% extends 'frontend.html.twig' %}

{% block body %}
    <div class="product-filter">
        <div class="grid-list-count">
            <a class="list switchToGrid" href="category.html#"><i class="fa fa-list"></i></a>
            <a class="grid switchToList" href="category.html#"><i class="fa fa-th-large"></i></a>
        </div>
        <div class="Show-item">
            <span>Itens Por Página</span>
            <form class="woocommerce-ordering" method="post">
                <label>
                    <select name="order" class="orderby">
                        <option selected="selected" value="12">12 itens</option>
                        <option value="24">24 itens</option>
                        <option value="48">48 itens</option>
                        <option value="72">72 itens</option>
                        <option value="96">96 itens</option>
                    </select>
                </label>
            </form>
        </div>
    </div>


    <div class="adds-wrapper">
        {% for ad in ads %}
            <div class="item-list make-grid">
                <div class="col-sm-2 no-padding photobox">
                    <div class="add-image">
                        <a href="#"><img src="{{ asset('frontend/img/item/img-1.jpg') }}" alt=""></a>
                        <span class="photo-count"><i class="fa fa-camera"></i> 2</span>
                    </div>
                </div>
                <div class="col-sm-7 add-desc-box">
                    <div class="add-details">
                        <h5 class="add-title"><a href="#">{{ ad.title }}</a></h5>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>


    <div class="pagination-bar text-center">
        <ul class="pagination">
            <li class="active"><a href="#">1</a></li>
            <li><a href="category.html#">2</a></li>
            <li><a href="category.html#">3</a></li>
            <li><a href="category.html#">4</a></li>
            <li><a href="category.html#">...</a></li>
            <li><a class="pagination-btn" href="#">Próximo »</a></li>
        </ul>
    </div>
{% endblock %}
