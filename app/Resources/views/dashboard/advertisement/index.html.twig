{% extends 'dashboard.html.twig' %}

{% block body %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Anúncios
            <small>lista de todas as anúncios cadastradas</small>
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="col-md-8">
            <!-- Default box -->
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title"> </h3>

                    <div class="pull-right">
                        <a href="{{ path('advertisement_new') }}">
                            <button type="button"
                                    class="btn btn-block btn-primary">
                                Adicionar
                            </button>
                        </a>
                    </div>
                </div>
                <div class="box-body">
                    <div id="wrapper">
                        <div id="container">

                            <table class="table table-bordered">
                                <thead>
                                <tr>
                                    {# sorting of properties based on query components #}
                                    <th style="width: 10px">{{ knp_pagination_sortable(pagination, 'Id', 'a.id') }}</th>
                                    <th{% if pagination.isSorted('a.Title') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Titulo', 'a.title') }}</th>
                                    <th>Empresa</th>
                                    <th style="width: 230px"></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for advertisement in pagination %}
                                    <tr>
                                        <td style="vertical-align: middle">
                                            <a href="{{ path('advertisement_show',
                                            { 'id': advertisement.id }) }}">
                                                {{ advertisement.id }}
                                            </a>
                                        </td>
                                        <td style="vertical-align: middle">{{ advertisement.title }}</td>
                                        <td style="vertical-align: middle">{{ advertisement.company }}</td>
                                        <td style="vertical-align: middle">
                                            <ul class="list-inline pull-right">
                                                <li>
                                                    {% if advertisement.status == '1' %}
                                                        <a href="#">
                                                            <button type="button"
                                                                    class="btn btn-block btn-success btn-xs">
                                                                Publicado
                                                            </button>
                                                        </a>
                                                    {% elseif advertisement.status == '0' %}
                                                        <a href="#">
                                                            <button type="button"
                                                                    class="btn btn-block btn-warning btn-xs">
                                                                Não Publicado
                                                            </button>
                                                        </a>
                                                    {% endif %}
                                                </li>
                                                <li>
                                                    <a href="{{
                                                    path('advertisement_edit',
                                                    { 'id': advertisement.id }) }}">
                                                        <button type="button"
                                                                class="btn btn-block btn-primary btn-sm">
                                                            Editar
                                                        </button>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="{{
                                                    path('advertisement_show',
                                                    { 'id': advertisement.id })
                                                    }}">
                                                        <button type="button"
                                                                class="btn btn-block btn-info btn-sm">
                                                            Ver
                                                        </button>
                                                    </a>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col-md-8 -->

        <!-- /.row-->
        <div class="row">
            <div class="col-md-8">
                <!-- Default box -->
                <div class="">
                    <div class="box-body">
                        <div id="wrapper">
                            <div id="container">
                                {# display navigation #}
                                <div class="pull-right">
                                    {{ knp_pagination_render(pagination) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box -->
            </div>
        </div>
        <!-- /.row-->

    </section>
    <!-- /.content -->
{% endblock %}

{% block stylesheets %}
    <style>

    </style>
{% endblock %}
