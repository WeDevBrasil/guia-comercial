{% extends 'dashboard.html.twig' %}

{% block body %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Anúncio
            <small>adicionar</small>
        </h1>
    </section>

    {{ form_start(form, {
        'attr': {
            'class': 'form-horizontal'
        }
    }) }}
    <!-- Main content -->
    <section class="content">
        <div class="col-md-8">
            <!-- Default box -->
            <div class="box">
                <div class="box-header with-border">
                    <ul class="list-inline pull-left">
                        <li>
                            <a href="{{ path('advertisement_index') }}">
                                <button type="button"
                                        class="btn btn-block btn-info btn-sm">
                                    <i class="fa fa-arrow-left"></i>
                                </button>
                            </a>
                        </li>
                    </ul>
                    <h3 class="box-title">Adicionar Anúncio</h3>
                </div>
                <div class="box-body">
                    <div id="wrapper">
                        <div id="container">
                            <div class="form-group">
                                {{ form_label(form.title, null, {
                                    'label': 'Título',
                                    'label_attr': {
                                        'class': 'col-sm-2 control-label'
                                    }
                                }) }}
                                <div class="col-sm-10">
                                    {{ form_widget(form.title, {
                                        'attr': {
                                            'class': 'form-control'
                                        }
                                    }) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.text, null, {
                                    'label': 'Texto do Anúncio',
                                    'label_attr': {
                                        'class': 'col-sm-2 control-label'
                                    }
                                }) }}
                                <div class="col-sm-10">
                                    {{ form_widget(form.text, {
                                        'attr': {
                                            'class': 'form-control summernote'
                                        }
                                    }) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.company, null, {
                                    'label': 'Empresa',
                                    'label_attr': {
                                        'class': 'col-sm-2 control-label'
                                    }
                                }) }}
                                <div class="col-sm-10">
                                    {{ form_widget(form.company, {
                                        'attr': {
                                            'class': 'form-control select2',
                                            'placeholder': 'Selecione a empresa'
                                        }
                                    }) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(form.tag, null, {
                                    'label': 'Tags',
                                    'label_attr': {
                                        'class': 'col-sm-2 control-label'
                                    }
                                }) }}
                                <div class="col-sm-10">
                                    {{ form_widget(form.tag, {
                                        'attr': {
                                            'class': 'form-control select2',
                                            'placeholder': 'Selecione as tags'
                                        }
                                    }) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <ul class="list-inline pull-right">
                        <li>
                            <a href="{{ path('advertisement_index') }}">Voltar</a>
                        </li>
                        <li>
                            <input type="submit" class="btn btn-primary"
                                   value="Adicionar" />
                        </li>
                    </ul>
                </div>
                <!-- /.box-footer-->
            </div>
            <!-- /.box -->
        </div>
        <div class="col-md-4">
            <!-- Default box -->
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Opções</h3>
                </div>
                <div class="box-body">
                    <div id="wrapper">
                        <div id="container">
                            <div class="form-group">
                                <span class="pull-left col-sm-9">
                                    {{ form_label(form.showMap, null, {
                                        'label': 'Exibir Mapa',
                                        'label_attr': {
                                            'class': 'control-label'
                                        }
                                    }) }}
                                </span>
                                <div class="col-sm-3">
                                    {{ form_widget(form.showMap, {
                                        'attr': {
                                            'class': 'js-switch form-control',
                                            'data-color': '#99d683'
                                        }
                                    }) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <span class="pull-left col-sm-9">
                                    {{ form_label(form.status, null, {
                                        'label': 'Publicar anuncio',
                                        'label_attr': {
                                            'class': 'control-label'
                                        }
                                    }) }}
                                </span>
                                <div class="col-sm-3">
                                    {{ form_widget(form.status, {
                                        'attr': {
                                            'class': 'js-switch form-control',
                                            'data-color': '#f96262'
                                        }
                                    }) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </section>
    {{ form_end(form) }}
    <!-- /.content -->
{% endblock %}

{% block stylesheets %}
    <!-- Select2 -->
    <link rel="stylesheet" href="{{ asset('dashboard/plugins/select2/select2.min.css') }}">
    <!-- summernotes  -->
    <link href="{{ asset('dashboard/plugins/summernote/dist/summernote.css') }}" rel="stylesheet" />
    <!--Style Switcher -->
    <link href="{{ asset('dashboard/plugins/switchery/dist/switchery.min.css') }}" rel="stylesheet" />
{% endblock %}

{% block javascripts %}
    <!-- Select2 -->
    <script src="{{ asset('dashboard/plugins/select2/select2.full.min.js') }}"></script>

    <script>
        $(function () {
            //Initialize Select2 Elements
            $(".select2").select2();
        });
    </script>

    <!-- summernotes  -->
    <script src="{{ asset('dashboard/plugins/summernote/dist/summernote.min.js') }}"></script>
    <script>
        jQuery(document).ready(function() {

            $('.summernote').summernote({
                height: 350, // set editor height
                minHeight: null, // set minimum height of editor
                maxHeight: null, // set maximum height of editor
                focus: false // set focus to editable area after initializing summernote
            });

            $('.inline-editor').summernote({
                airMode: true
            });

        });

        window.edit = function() {
            $(".click2edit").summernote()
        };
        window.save = function() {
            $(".click2edit").destroy()
        }
    </script>

    <!--Style Switcher -->
    <script src="{{ asset('dashboard/plugins/switchery/dist/switchery.min.js') }}"></script>
    <script>
        jQuery(document).ready(function() {
            // Switchery
            var elems = Array.prototype.slice.call(document.querySelectorAll('.js-switch'));
            $('.js-switch').each(function() {
                new Switchery($(this)[0], $(this).data());

            });
        });
    </script>
{% endblock %}