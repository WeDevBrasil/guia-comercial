{% extends 'dashboard.html.twig' %}

{% block body %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Anúncio
            <small>ver</small>
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="col-md-8">
            <!-- Default box -->
            <div class="box">
                <div class="box-header with-border">
                    <ul class="list-inline pull-left">
                        <li>
                            <a href="{{ path('advertisement_index') }}">
                                <button type="button"
                                        class="btn btn-block btn-info btn-sm">
                                    <i class="fa fa-arrow-left"></i>
                                </button>
                            </a>
                        </li>
                    </ul>
                    <h3 class="box-title">Ver Anúncio</h3>
                </div>
                <div class="box-body">
                    <div id="wrapper">
                        <div id="container">
                            <table class="table table-striped table-bordered">
                                <tbody>
                                <tr>
                                    <th><span class="pull-right">Id</span></th>
                                    <td>{{ advertisement.id }}</td>
                                </tr>
                                <tr>
                                    <th><span class="pull-right">Título</span></th>
                                    <td>{{ advertisement.title }}</td>
                                </tr>
                                <tr>
                                    <th><span class="pull-right">Texto do anúncio</span></th>
                                    <td>{{ advertisement.text | raw }}</td>
                                </tr>
                                <tr>
                                    <th><span class="pull-right">Empresa</span></th>
                                    <td>{{ advertisement.company }}</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <ul class="list-inline pull-right">
                        <li>
                            <a href="{{ path('advertisement_index') }}">Voltar</a>
                        </li>
                        <li>
                            {{ form_start(delete_form) }}
                            <button type="submit" class="btn btn-danger">
                                Apagar
                            </button>
                            {{ form_end(delete_form) }}
                        </li>
                        <li>
                            <a href="{{ path('advertisement_edit', { 'id': advertisement.id }) }}">
                                <button type="button" class="btn btn-primary">
                                    Editar
                                </button>
                            </a>
                        </li>
                    </ul>
                </div>
                <!-- /.box-footer-->
            </div>
            <!-- /.box -->
        </div>
    </section>
    <!-- /.content -->
{% endblock %}
