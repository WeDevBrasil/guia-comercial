{% extends 'dashboard.html.twig' %}

{% block body %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Categorias
            <small>lista de todas as categorias cadastradas</small>
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-8">
                <!-- Default box -->
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title"> </h3>

                        <div class="pull-right">
                            <a href="{{ path('category_new') }}">
                                <button type="button"
                                        class="btn btn-block btn-primary">
                                    Adicionar
                                </button>
                            </a>
                        </div>
                    </div>
                    <div class="box-body">
                        <div id="wrapper">
                            <div id="container">

                                <table class="table table-bordered">
                                    <thead>
                                    <tr>
                                        {# sorting of properties based on query components #}
                                        <th style="width: 10px">{{ knp_pagination_sortable(pagination, 'Id', 'a.id') }}</th>
                                        <th{% if pagination.isSorted('a.Name') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Nome', 'a.name') }}</th>
                                        <th style="width: 140px">{{ knp_pagination_sortable(pagination, '', []) }}</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for category in pagination %}
                                        <tr>
                                            <td style="vertical-align: middle">
                                                <a href="{{ path('category_show',
                                                { 'id': category.id }) }}">
                                                    {{ category.id }}
                                                </a>
                                            </td>
                                            <td style="vertical-align: middle">{{ category.name }}</td>
                                            <td style="vertical-align: middle">
                                                <ul class="list-inline pull-right">
                                                    <li>
                                                        <a href="{{
                                                            path('category_edit',
                                                            { 'id': category.id }) }}">
                                                            <button type="button"
                                                                    class="btn btn-block btn-primary btn-sm">
                                                                Editar
                                                            </button>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a href="{{
                                                            path('category_show',
                                                            { 'id': category.id })
                                                        }}">
                                                            <button type="button"
                                                                    class="btn btn-block btn-info btn-sm">
                                                                Ver
                                                            </button>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        <!-- /.col-md-8 -->
        </div>
        <!-- /.row-->
        <div class="row">
            <div class="col-md-8">
                <!-- Default box -->
                <div class="">
                    <div class="box-body">
                        <div id="wrapper">
                            <div id="container">
                                {# display navigation #}
                                <div class="pull-right">
                                    {{ knp_pagination_render(pagination) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box -->
            </div>
        </div>
        <!-- /.row-->

    </section>
    <!-- /.content -->
{% endblock %}

{% block stylesheets %}
    <style>

    </style>
{% endblock %}
