{% extends 'dashboard.html.twig' %}

{% block body %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Empresas
            <small>lista de todas as empresas cadastradas</small>
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-8">
                <!-- Default box -->
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title"> </h3>
                        <div class="count">
                            {{ pagination.getTotalItemCount }}
                        </div>
                        <div class="pull-right">
                            <a href="{{ path('company_new') }}">
                                <button type="button"
                                        class="btn btn-block btn-primary">
                                    Adicionar
                                </button>
                            </a>
                        </div>
                    </div>
                    <div class="box-body">
                        <div id="wrapper">
                            <div id="container">

                                <table class="table table-bordered table-striped">
                                    <thead>
                                    <tr>
                                        {# sorting of properties based on query components #}
                                        <th>{{ knp_pagination_sortable(pagination, 'Id', 'a.id') }}</th>
                                        <th{% if pagination.isSorted('a.Name') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Nome da Empresa', 'a.name') }}</th>
                                        <th{% if pagination.isSorted('a.Category') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Categoria', 'a.category') }}</th>
                                        <th style="width: 140px">{{ knp_pagination_sortable(pagination, 'Opções', []) }}</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for company in pagination %}
                                        <tr>
                                            <td style="vertical-align: middle">
                                                <a href="{{ path('company_show',
                                                { 'id': company.id }) }}">
                                                    {{ company.id }}
                                                </a>
                                            </td>
                                            <td style="vertical-align: middle">{{ company.name }}</td>
                                            <td style="vertical-align: middle">{{ company.category }}</td>
                                            <td style="vertical-align: middle">
                                                <ul class="list-inline pull-right">
                                                    <li>
                                                        <a href="{{
                                                        path('company_edit',
                                                        { 'id': company.id }) }}">
                                                            <button type="button"
                                                                    class="btn btn-block btn-primary btn-sm">
                                                                Editar
                                                            </button>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a href="{{
                                                        path('company_show',
                                                        { 'id': company.id })
                                                        }}">
                                                            <button type="button"
                                                                    class="btn btn-block btn-info btn-sm">
                                                                Ver
                                                            </button>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer clearfix">
                        {# display navigation #}
                        <div class="navigation pagination pagination-sm no-margin span12">
                            {{ knp_pagination_render(pagination) }}
                        </div>
                    </div>
                    <!-- /.box-footer-->
                </div>
            </div>
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
{% endblock %}

{% block stylesheets %}
    <style>

    </style>
{% endblock %}
