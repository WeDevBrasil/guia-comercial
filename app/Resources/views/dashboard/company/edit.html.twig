{% extends 'dashboard.html.twig' %}

{% block body %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Empresa
            <small>editar</small>
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">
        {{ form_start(edit_form, {
            'attr': {
                'class': 'form-horizontal'
            }
        }) }}
        <div class="col-md-8">
            <!-- Default box -->
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Dados da Empresa</h3>
                </div>
                <div class="box-body">
                    <div id="wrapper">
                        <div id="container">
                            <div class="form-group">
                                {{ form_label(edit_form.name, null, {
                                    'label': 'Nome',
                                    'label_attr': {
                                        'class': 'col-sm-2 control-label'
                                    }
                                }) }}
                                <div class="col-sm-10">
                                    {{ form_widget(edit_form.name, {
                                        'attr': {
                                            'class': 'form-control'
                                        }
                                    }) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(edit_form.bio, null, {
                                    'label': 'Biografia',
                                    'label_attr': {
                                        'class': 'col-sm-2 control-label'
                                    }
                                }) }}
                                <div class="col-sm-10">
                                    {{ form_widget(edit_form.bio, {
                                        'attr': {
                                            'class': 'form-control'
                                        }
                                    }) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(edit_form.category, null, {
                                    'label': 'Categoria',
                                    'label_attr': {
                                        'class': 'col-sm-2 control-label'
                                    }
                                }) }}
                                <div class="col-sm-10">
                                    {{ form_widget(edit_form.category, {
                                        'attr': {
                                            'class': 'form-control select2'
                                        }
                                    }) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>

        <div class="col-md-8">
            <!-- Default box -->
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Endereço</h3>
                </div>
                <div class="box-body">
                    <div id="wrapper">
                        <div id="container">
                            <div class="form-group">
                                {{ form_label(edit_form.address.streetType, null, {
                                    'label': 'Tipo do Logradouro',
                                    'label_attr': {
                                        'class': 'col-sm-2 control-label'
                                    }
                                }) }}
                                <div class="col-sm-10 required">
                                    {{ form_widget(edit_form.address.streetType, {
                                        'attr': {
                                            'class': 'form-control'
                                        }
                                    }) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(edit_form.address.street, null, {
                                    'label': 'Endereço',
                                    'label_attr': {
                                        'class': 'col-sm-2 control-label'
                                    }
                                }) }}
                                <div class="col-sm-10 required">
                                    {{ form_widget(edit_form.address.street, {
                                        'attr': {
                                            'class': 'form-control'
                                        }
                                    }) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(edit_form.address.number, null, {
                                    'label': 'Numero',
                                    'label_attr': {
                                        'class': 'col-sm-2 control-label'
                                    }
                                }) }}
                                <div class="col-sm-10 required">
                                    {{ form_widget(edit_form.address.number, {
                                        'attr': {
                                            'class': 'form-control'
                                        }
                                    }) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(edit_form.address.district, null, {
                                    'label': 'Bairro',
                                    'label_attr': {
                                        'class': 'col-sm-2 control-label'
                                    }
                                }) }}
                                <div class="col-sm-10 required">
                                    {{ form_widget(edit_form.address.district, {
                                        'attr': {
                                            'class': 'form-control'
                                        }
                                    }) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(edit_form.address.zipCode, null, {
                                    'label': 'CEP',
                                    'label_attr': {
                                        'class': 'col-sm-2 control-label'
                                    }
                                }) }}
                                <div class="col-sm-10 required">
                                    {{ form_widget(edit_form.address.zipCode, {
                                        'attr': {
                                            'class': 'form-control'
                                        }
                                    }) }}
                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_label(edit_form.address.city, null, {
                                    'label': 'Cidade',
                                    'label_attr': {
                                        'class': 'col-sm-2 control-label'
                                    }
                                }) }}
                                <div class="col-sm-10 required">
                                    {{ form_widget(edit_form.address.city, {
                                        'attr': {
                                            'class': 'form-control'
                                        }
                                    }) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <div class="col-md-8">
            <!-- Default box -->
            <div class="box">
                <div class="box-footer">
                    <ul class="list-inline pull-right">
                        <li>
                            <a href="{{ path('company_index') }}">Voltar</a>
                        </li>
                        <li>
                            <input type="submit" class="btn btn-primary"
                                   value="Salvar" />
                        </li>
                    </ul>
                </div>
                <!-- /.box-footer-->
            </div>
            <!-- /.box -->
        </div>
        {{ form_end(edit_form) }}
    </section>
    <!-- /.content -->
{% endblock %}

{% block stylesheets %}
    <!-- Select2 -->
    <link rel="stylesheet" href="{{ asset('dashboard/plugins/select2/select2.min.css') }}">
{% endblock %}

{% block javascripts %}
    <!-- Select2 -->
    <script src="{{ asset('dashboard/plugins/select2/select2.full.min.js') }}"></script>

    <script>
        $(function () {
            //Initialize Select2 Elements
            $(".select2").select2();
        });
    </script>
{% endblock %}
