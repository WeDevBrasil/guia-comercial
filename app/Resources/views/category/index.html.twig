{% extends 'base.html.twig' %}

{% block body %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Categorias
            <small>lita de todas as categorias cadastradas</small>
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="col-md-8">
            <!-- Default box -->
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title"> </h3>

                    <div class="pull-right">
                        <a href="{{ path('category_new') }}">
                            <button type="button" class="btn btn-block btn-primary">
                                Adicionar
                            </button>
                        </a>
                    </div>
                </div>
                <div class="box-body">
                    <div id="wrapper">
                        <div id="container">

                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th style="width: 10px">Id</th>
                                        <th>Nome</th>
                                        <th style="width: 200px">Opções</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for category in categories %}
                                    <tr>
                                        <td style="vertical-align: middle"><a href="{{ path('category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                                        <td style="vertical-align: middle">{{ category.name }}</td>
                                        <td style="vertical-align: middle">
                                            <ul class="list-inline pull-right">
                                                <li>
                                                    <a href="#">
                                                        <button type="button" class="btn btn-block btn-danger btn-sm">
                                                            Apagar
                                                        </button>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="{{ path('category_edit', { 'id': category.id }) }}">
                                                        <button type="button" class="btn btn-block btn-primary btn-sm">
                                                            Editar
                                                        </button>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="{{ path('category_show', { 'id': category.id }) }}">
                                                        <button type="button" class="btn btn-block btn-info btn-sm">
                                                            Ver
                                                        </button>
                                                    </a>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <ul class="pagination pagination-sm no-margin">
                        <li><a href="#">&laquo;</a></li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">&raquo;</a></li>
                    </ul>
                </div>
                <!-- /.box-footer-->
            </div>
        </div>
        <!-- /.box -->

    </section>
    <!-- /.content -->
{% endblock %}

{% block stylesheets %}
    <style>

    </style>
{% endblock %}
